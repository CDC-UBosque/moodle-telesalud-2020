//- ---------------------------- paginador ------------------------------- //
mixin link(href, name)
	//- attributes == {class: "btn"}
	a(href=href)= name
	
	//- +link('/foo', 'foo')(class="btn")
	
	

mixin paginador(linkatras, class1, linkadelante, class2)
	div.progress-fullbar
		div.pager
			div.paginas
				ul
					li.previous
						a(href=linkatras class=class1)
							img(src='https://ubosquemoodle.unbosque.edu.co/diseno/cursos/moodle-diplomado-herramientas-para-la-gestion-socioambiental-en-la-industria-del-gas/images/svg/arrow-left.svg')
					li.next
						a(href=linkadelante class=class2)
							img(src='https://ubosquemoodle.unbosque.edu.co/diseno/cursos/moodle-diplomado-herramientas-para-la-gestion-socioambiental-en-la-industria-del-gas/images/svg/arrow-right.svg')
			div.counter
				<p><span class="eta"></span> (<!--<span class="words"></span>--> &cong; Tiempo de lectura )</p>
			div.menuanchorbot
				a.btn-primary(href="#menuanchor-top") Menú
		div.progressContainer
			div#progress.progress


//- ---------------------------- navegacion ------------------------------- //
			
mixin navegacion(linkatras, class1, linkadelante, class2)
	div.bottom-block
		div.title 
			h1 Navegación 
		div.content 
			a.white-btn(href=linkatras class=class1) &lsaquo; Anterior
			a.white-btn(href=linkadelante class=class2) Siguiente &rsaquo;
			a.blue-btn(href="#menuanchor-top") Menú
		div.progressContainer
			div#progress.progress


//- ---------------------------- menu ------------------------------- //
mixin modulotest-home(testmodulo)
	div(id=testmodulo)

mixin modulo(modulo, titulomodulo, testmodulo)
	div.top-block
		div.title
			h1= modulo
		div.content
			h2= titulomodulo
			hr
			div.counter
				<p class="italic"><span class="eta"></span> (<!--<span class="words"></span>--> &cong; Tiempo de lectura )</p>
			hr
			div(id=testmodulo)
			
mixin modulo-simple(modulo, titulomodulo, testmodulo)
	div.top-block
		div.title
			h1= modulo
		div.content
			h2= titulomodulo
			hr
			div(id=testmodulo)

//- ---------------------------- menu simple ------------------------------- //
			
mixin menu-simple
	div.progress-fullbar.simple
