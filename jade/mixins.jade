//- ---------------------------- Accordion mixin ------------------------------- //
//- mixin container
mixin accordion(numberid)
	div.accordion(id= numberid)
		block

//- mixin accordion item		
mixin accordion-item(dataparent, href, target, title)
	div.accordion-group.wow.fadeInUp
		div.accordion-heading
			a.accordion-toggle(data-toggle='collapse' data-parent=dataparent href=href)
				span= title
		div.accordion-body.collapse(id= target)
			div.accordion-inner
				block
				
