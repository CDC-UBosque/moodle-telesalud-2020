//- ---------------------------- Video mixin ------------------------------- //
mixin video(url)
	div.banner-videos.wow.fadeInUp
		div#video
			div.embed-container
				iframe(src=url) 
					
					


//- ---------------------------- image / video + caption mixin ------------------------------- //	
mixin image-caption(alink, datalightbox, imagelink, imagealt)
	div.banner-video.wow.fadeInUp
		div.imagen
			div#video
				figure.galeria
					a.example-image-link(href=alink data-lightbox=datalightbox)
						img.example-image(src=imagelink alt=imagealt)
		div.texto_imagen
			div.img-footer
				block
				
				
//- ---------------------------- Tabs ------------------------------- //
mixin tabs-container
	div.bs-docs
		ul#myTab.nav.nav-tabs
			block titles
		div#myTabContent.tab-content
			block content
				
mixin tabs-buttons(state, href, numero)
	block
	li(class=state)
		a(href=href data-toggle='tab')= numero
		
mixin tabs-content-tab(state, in, numero)
	block
	div.tab-pane.fade(class=state in id=numero)
		

// initialization
- blocks = {}

mixin set(key)
	- blocks[key] = this.block

// mixin definition
mixin tabs-containers
	div.bs-docs
		block
		ul#myTab.nav.nav-tabs
			- blocks.titles()
		div#myTabContent.tab-content
			- blocks.content()



