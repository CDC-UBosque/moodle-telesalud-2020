// initialization
- blocks = {}

mixin set(key)
	- blocks[key] = this.block

// mixin definition
mixin tables-containers(caption)
	table.table.table-striped
		caption= caption
			block
			thead
				- blocks.thead()
			tbody
				- blocks.tr()
				
				
